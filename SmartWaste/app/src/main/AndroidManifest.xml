<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartWaste"
        android:usesCleartextTraffic="true">
        
        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_GOOGLE_MAPS_API_KEY" />
        
        <!-- Login Activity (Main Entry Point) -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.SmartWaste.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Register Activity -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartWaste" />
        
        <!-- Dashboard Activities -->
        <activity
            android:name=".activities.CitizenDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartWaste.NoActionBar" />
        
        <activity
            android:name=".activities.DriverDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartWaste.NoActionBar" />
        
        <activity
            android:name=".activities.AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartWaste.NoActionBar" />
        
        <!-- Other Activities -->
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.ReportIssueActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.BinDetailsActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.CollectionActivity"
            android:exported="false" />
        
        <!-- Admin Activities -->
        <activity
            android:name=".activities.VehicleManagementActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.BinManagementActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.RouteManagementActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.AnalyticsActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.UserManagementActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.ReportsActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.MaintenanceActivity"
            android:exported="false" />
        
    </application>

</manifest>